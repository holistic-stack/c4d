{
  "name": "openscad-playground",
  "version": "0.1.0",
  "description": "Browser-based OpenSCAD playground with WASM rendering",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:wasm": "wasm-pack build ../../libs/wasm --target web --out-dir ../../apps/playground/src/lib/wasm/pkg -- -Z build-std=std,panic_abort",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "three": "^0.169.0"
  },
  "devDependencies": {
    "@types/three": "^0.169.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0"
  }
}